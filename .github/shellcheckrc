# ShellCheck Configuration File

# Disable specific warnings
disable=SC1090,SC1091,SC2004,SC2015,SC2034,SC2086,SC2154,SC2164

# Set shell dialect
shell=bash

# Set source path
source-path=SCRIPTDIR

# Set external source path
external-sources=false

# Set color output
color=auto

# Set severity level
severity=style

# Set format
format=tty

# Set shellcheck version
shellcheck-version=0.8.0 